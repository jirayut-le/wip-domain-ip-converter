<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_bg"
    tools:context="com.ske13.ntk.wip.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:srcCompat="@drawable/wip_icon_w" />
        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@id/logo"
            />

        <EditText
            android:id="@+id/input"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_style"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Domain name or IP Address"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/whiteOp50"
            android:textColorHint="@color/whiteOp50"
            android:layout_below="@id/fullscreen_content"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_btn"
            android:text="Submit"
            android:textColor="#6B58D9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/input"/>

</RelativeLayout>
